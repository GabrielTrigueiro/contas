{
  "name": "controle",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^6.1.0",
    "@mui/x-date-pickers": "^7.18.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.108",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "dayjs": "^1.11.13",
    "formik": "^2.4.6",
    "lucide": "^0.441.0",
    "lucide-react": "^0.441.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.13",
    "typescript": "^4.9.5",
    "uuid": "^10.0.0",
    "web-vitals": "^2.1.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12",
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"yarn start\" \"yarn run electron\"",
    "dist": "yarn build && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "repository": "https://github.com/GabrielTrigueiro/ContasUpdates",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "license": "MIT",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "GabrielTrigueiro",
      "repo": "ContasUpdates"
    },
    "appId": "com.bitbeelabs.lbs",
    "win": {
      "target": "nsis",
      "icon": "src/images/assets/lbsLogoWindows.ico"
    },
    "mac": {
      "target": "default",
      "icon": "src/images/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/images/assets/linux.png"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Controle",
      "runAfterFinish": true
    }
  }
}
